<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="doButtonClick5"
    tools:context=".MainActivity"
    tools:ignore="DuplicateSpeakableTextCheck,ExtraText,MissingDefaultResource,UsingOnClickInXml">

    <TextView
        android:id="@+id/textoNum"
        android:layout_width="595dp"
        android:layout_height="95dp"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:hint="0"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toStartOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="497dp"
        android:layout_height="353dp"
        android:columnCount="4"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tableLayout"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoNum">


        <Button
            android:id="@+id/seven"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="doButtonClick7"
            android:text="@string/_7"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/eight"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="doButtonClick8"
            android:text="@string/_8"
            tools:ignore="UsingOnClickInXml" />


        <Button
            android:id="@+id/nine"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="doButtonClick9"
            android:text="@string/_9"
            tools:ignore="UsingOnClickInXml" />


        <Button
            android:id="@+id/slash"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="doButtonClickSlash"
            android:text="@string/slash"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/four"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="doButtonClick4"
            android:text="@string/_4"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/five"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="doButtonClick5"
            android:text="@string/_5"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/six"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="doButtonClick6"
            android:text="6"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="doButtonClickMult"
            android:text="*"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/one"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="doButtonClick1"
            android:text="@string/_1"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/two"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="doButtonClick2"
            android:text="@string/_2"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/three"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="doButtonClick3"
            android:text="@string/_3"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/minus"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="doButtonClickMin"
            android:text="@string/minus"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/doc"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="@string/doc"
            tools:ignore="VisualLintBounds" />

        <Button
            android:id="@+id/zero"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="doButtonClick0"
            android:text="@string/zero"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/equal"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="doButtonClickEqual"
            android:text="@string/equal" />

        <Button
            android:id="@+id/plus"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="doButtonClickPlus"
            android:text="@string/plus"
            tools:ignore="UsingOnClickInXml" />


    </GridLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="125dp"
        android:layout_height="355dp"
        android:layout_marginEnd="190dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textoNum"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/clear2"
                android:layout_width="121dp"
                android:layout_height="80dp"
                android:onClick="doButtonClickClear"
                android:text="@string/clear"
                tools:ignore="UsingOnClickInXml" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/showOptions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/mostrar_opciones_deshabilitar"
                tools:ignore="VisualLintButtonSize,VisualLintBounds" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/lhori"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="invisible"

                tools:ignore="UselessParent,VisualLintBounds">


                <RadioButton
                    android:id="@+id/radioButtonSum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/suma" />

                <RadioButton
                    android:id="@+id/radioRes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/resta" />

                <RadioButton
                    android:id="@+id/radioButtonMult"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/multiplicacion" />

                <RadioButton
                    android:id="@+id/radioButtonDivision"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/division" />
            </LinearLayout>
        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

